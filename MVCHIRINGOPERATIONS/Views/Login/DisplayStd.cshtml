@model IEnumerable<MVCHIRINGOPERATIONS.Models.STUDENTMODEL>
@{
    ViewData["Title"] = "DisplayStd";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}


<html>
<head>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- Content Start -->
    <section class="text-black">
        <div class="container-fluid">
            <div class="grid-container">
                <div class="row">
                    <div class="caption col-sm-7">
                        <h6 class="page-title">STUDENT'S DATA</h6>
                        <div class="form-outline">
                            <i class="fa fa-search"></i>
                            <input type="search" id="myInput" class="form" placeholder="Search Here...">
                            <span class="right-pan color:blue;"><i></i></span>
                        </div>

                        <asp:Label ID="lbl_error" runat="server" Text="Label" Visible="False" ForeColor="Red"></asp:Label>
                    </div>
                    @*<div class="col-md-5">
                        <button type="button" class="btn btn-primary btn-style1-oval float-right" data-toggle="modal" data-target="#addFieldModal">+ Add Department</button>
                    </div>*@
                </div>
                <hr />
                <div id="formgrid" class="formgrid">
                    <table class="table table-bordered table-striped dtables" style="width: 100%" id="testtable">



                        <tr>
                            <th style="width: 20px; text-align: center">HallTicketNo</th>
                            <th>
                                <span style="font-size: 15px">StudentName</span>
                            </th>
                            <th>
                                <span style="font-size: 15px">EmailID</span>
                            </th>

                            <th>
                                <span style="font-size: 15px">CollegeName</span>
                            </th>
                            <th>
                                <span style="font-size: 15px">Backlogs</span>
                            </th>
                            <th>
                            
                                <span style="font-size: 15px">Status</span>
                            </th>
                            <th>
                                <span style="font-size: 15px">Action</span>
                            </th>
                        </tr>

                        <tbody id="myTable">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align: center">@item.Hall_ticket_no</td>
                                <td>@item.Name_of_the_student</td>                              
                                <td>@item.Emailid</td>
                                <td>@item.Engineering_College_Name</td>
                                <td>@item.Total_backlogs</td>                               
                                @*<td><p style="color:hotpink">Waiting for L1 Interview</p></td>  *@
                                <td style="color:hotpink">@item.Status</td>
                                <td>
                                    <!-- Modal -->
                                    @using (Html.BeginForm("DisplayStd", "Login", FormMethod.Post))
                                    {
                                        <div class="modal fade" id="updateFieldModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document" id="form-modal">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                        <h5 class="modal-title" id="exampleModalLabel">L1 Results</h5>
                                                    </div>
                                                    <div class="modal-body">
                                                      @*<input type="text" id="Hall_ticket_no" name="Hall_ticket_no" placeholder="Enter HallTicket" />*@
                                                        @*<div class="form-group row">
                                                <label class="col-sm-2 col-form-label"><b>HallTicket</b></label>
                                                <div class=" col-sm-4 inputGroupContainer">
                                                <div class="input-group">
                                                <input type="text" id="texens" name="searchparam" placeholder="Enter HallTicket" />
                                                </div>
                                                </div>
                                                </div>*@

                                                        <div class="form-group row">
                                                            <label class="col-sm-2 col-form-label"><b>HallTicket<span class="text-danger">*</span></b></label>
                                                            <div class="col-sm-4 inputGroupContainer">
                                                                <div class="input-group">
                                                                    @Html.TextBox("Hall_ticket_no")
                                                                </div>
                                                            </div>
                                                        </div>


                                                        <div class="form-group row">
                                                            <label class="col-sm-2 col-form-label"><b>Remarks<span class="text-danger">*</span></b></label>
                                                            <div class="col-sm-6 inputGroupContainer">
                                                                <div class="input-group">
                                                                    @Html.TextBox("Remarks")
                                                                </div>
                                                            </div>
                                                        </div>
                                                        @*<div class="form-group row">
                                                <label class="col-sm-2 col-form-label"><b>StudentName</b></label>
                                                <div class="col-sm-4 inputGroupContainer">
                                                <div class="input-group">
                                                @Html.TextBox("Name")
                                                </div>
                                                </div>
                                                </div>*@
                                                        <div class="form-group row">
                                                            <label class="col-sm-2 col-form-label"><b>Score<span class="text-danger">*</span></b></label>
                                                            <div class="col-sm-6 inputGroupContainer">
                                                                <div class="input-group">
                                                                    @Html.TextBox("Score")
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                           @* <label class="col-sm-2 col-form-label"><b>To</b></label>*@
                                                            <div class="col-sm-6 inputGroupContainer">
                                                                <div class="input-group">
                                                                    <input type="text" id="To" name="To" placeholder="Enter to email address" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                       @* <div class="form-group row">
                                                        <label class="col-sm-2 col-form-label"><b>DateOfL1Exam</b></label>
                                                        <div class="col-sm-6 inputGroupContainer">
                                                            <div class="input-group">
                                                                    @*<input type="date" id="datetime" name="searchparam" class="form-control" placeholder="Enter DOE" />*@
                                                                    @*@Html.Editor("DateOfL1Exam")
                                                            </div>
                                                        </div>
                                                        </div>*@
                                                        <div class="modal-footer">
                                                            <input type="submit" class="btn btn-success" value="Submit">
                                                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>

                                                        </div>
                                                        @*<div class="modal-footer">
                                                            <button type="button" class="btn btn-success">Save</button>
                                                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                                        </div>*@
                                                    </div>
                                                    @*  <input type="submit" value="Submit" />*@


                                                </div>
                                            </div>
                                        </div>
                                    }


                                    <center>

                                        <a href="#" class="editbtn" data-id="@item.Hall_ticket_no" data-toggle="modal" data-target="#updateFieldModal">
                                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" disabled="@(item.Status!="Waiting For L1 Interview")">
                                                L1 Approval
                                            </button>
                                        </a>                                                                                 
                                        </center>                                
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
                <br />
            </div>
        </div>
    </section>
    <!-- End -->
    <script type="text/javascript" src="Revamp/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="Revamp/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#testtable").on("click", ".editbtn", function () {
                var currentid = $(this).closest("tr").find("td").eq(0).text();
                var toemail = $(this).closest("tr").find("td").eq(2).text();
                $("input:text#Hall_ticket_no").val(currentid);
                $("input:text#To").val(toemail);
                $("input:text#To").hide();
            });
        });
    </script>
 <script type="text/javascript">
        $(document).ready(function () {
            $("#testtable").on("click", ".editbtn", function () {
                var currentid = $(this).closest("tr").find("td").eq(0).text();
                $("input:text#texens").val(currentid);
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
</body>
</html>

