@model IEnumerable<MVCHIRINGOPERATIONS.Models.STUDENTMODEL>
@{
    ViewData["Title"] = "L2module";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}

<h1>L2module</h1>
<html>
    
<head>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    
</head>
<body>
    <!-- Content Start -->
    <section class="text-black">
        <div class="container-fluid">
            <div class="grid-container">
                <div class="row">
                    <div class="caption col-sm-7">
                        <h6 class="page-title">DEPARTMENT'S DATA</h6>
                        <asp:Label ID="lbl_error" runat="server" Text="Label" Visible="False" ForeColor="Red"></asp:Label>
                    </div>
                    <div class="col-md-5">
                        <button type="button" class="btn btn-primary btn-style1-oval float-right" data-toggle="modal" data-target="#addFieldModal">+ Add Department</button>
                    </div>
                </div>
                <hr />
                <div id="formgrid" class="formgrid">
                    <table class="table table-bordered table-striped dtables" style="width: 100%" id="testtable">

 

                        <tr>
                            <th style="width: 20px; text-align: center">Hall Ticket No</th>
                            
                            <th>
                                <span style="font-size: 15px">Email ID</span>
                            </th>
                            <th>
                                <span style="font-size: 15px">Phone No</span>
                            </th>
                            <th>
                                <span style="font-size: 15px">College Name</span>
                            </th>
                            <th>
                                <span style="font-size: 15px">Backlogs</span>
                            </th>
                            <th>
                                <span style="font-size: 15px">Year Of Passout</span>
                            </th>
                            <th>
                                <span style="font-size: 15px">Status</span>
                            </th>
                            <th>
                                <span style="font-size: 15px"class="col-2">Action</span>
                            </th>
                        </tr>

 

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align: center">@item.Hall_ticket_no</td>
                                
                                <td>@item.Emailid</td>
                                <td>@item.PH_No</td>
                                <td>@item.Engineering_College_Name</td>
                                <td>@item.Total_backlogs</td>
                                <td>@item.Btech_Year_of_Pass_out</td>
                                @*<td style="color:red">Waiting for L1 interview</td>*@
                                <td style="color:deeppink">@item.Status</td>
                                <td>
                                    <!-- Modal -->
                                    @using (Html.BeginForm("L2module", "Login", FormMethod.Post))
                                    {

 

                                        <div class="modal fade" id="updateFieldModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document" id="form-modal">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">L2 Result</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                  

                                                  
                                                    
                                                   <div class="modal-body">

                                @*<div class="form-group row">
                                    <label class="col-sm-2 col-form-label"><b>HallTicket</b></label>
                                    <div class=" col-sm-4 inputGroupContainer">
                                        <div class="input-group">
                                            <input type="text" id="texens" name="searchparam" placeholder="Enter HallTicket" />
                                        </div>
                                    </div>
                                </div>*@
                                
                                <div class="form-group row">
                                                            <label class="col-sm-2 col-form-label"><b>HallTicket<span class="text-danger">*</span></b></label>
                                    <div class="col-sm-4 inputGroupContainer">
                                        <div class="input-group">
                                            @Html.TextBox("Hall_ticket_no")
                                        </div>
                                    </div>
                                </div>

                                

                                
                                <div class="form-group row">
                                 <label class="col-sm-2 col-form-label"><b>Score<span class="text-danger">*</span></b></label>
                                    <div class="col-sm-6 inputGroupContainer">
                                        <div class="input-group">
                                            @Html.TextBox("Score")
                                        </div>
                                    </div>
                                </div>
                                 <div class="form-group row">
                                                            <label class="col-sm-2 col-form-label"><b>Remarks<span class="text-danger">*</span></b></label>
                                    <div class="col-sm-6 inputGroupContainer">
                                        <div class="input-group">
                                            @Html.TextArea("Remarks")
                                        </div>
                                    </div>
                                </div>
                                                          <div class="form-group row">
                                                            @* <label class="col-sm-2 col-form-label"><b>To</b></label>*@
                                                            <div class="col-sm-6 inputGroupContainer">
                                                                <div class="input-group">
                                                                    <input type="text" id="To" name="To" placeholder="Enter to email address" />
                                                                </div>
                                                            </div>
                                                            </div>
                               
                                                   <div class="modal-footer">
                                                        <input type="Submit" class="btn btn-primary"value="submit">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal"style="background-color:red">Close</button>
                                                        
                                                    </div>
                            </div>
                                               @*  <input type="submit" value="Submit" />*@
                                               
                                                      
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <center>

                                        <a href="#" class="editbtn" data-id="@item.Hall_ticket_no" data-toggle="modal" data-target="#updateFieldModal">
                                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" disabled="@(item.Status!="Waiting For L2 Interview")">
                                                L2 Approval
                                            </button>
                                        </a>
                                    </center>


                                </td>
                                
                               @* <td>
                                <button type="submit"style="background-color:red"onclick="disabled()">Reject</button>
                                </td>*@
                            </tr>
                        }
                    </table>
                </div>
                <br />
            </div>
        </div>
    </section>
    <!-- End -->
    <script type="text/javascript" src="Revamp/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="Revamp/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#testtable").on("click", ".editbtn", function () {
                var currentid = $(this).closest("tr").find("td").eq(0).text();
                var toemail = $(this).closest("tr").find("td").eq(1).text();
                $("input:text#Hall_ticket_no").val(currentid);
                $("input:text#To").val(toemail);
                $("input:text#To").hide();
            });
        });
    </script>


    <script type="text/javascript">
        $(document).ready(function () {
            $("#testtable").on("click", ".editbtn", function () {
                var currentid = $(this).closest("tr").find("td").eq(0).text();
                $("input:text#texens").val(currentid);
            });
        });
    </script>
   
</body>
</html>


