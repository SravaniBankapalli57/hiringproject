@model IEnumerable<MVCHIRINGOPERATIONS.Models.USERSMODEL>
@{
    ViewData["Title"] = "DisplayUsers";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}

<h1>DisplayUsers</h1>
<html>
<head>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- Content Start -->
    <section class="text-black">
        <div class="container-fluid">
            <div class="grid-container">
                <div class="row">
                    <div class="caption col-sm-7">
                       
                        <asp:Label ID="lbl_error" runat="server" Text="Label" Visible="False" ForeColor="Red"></asp:Label>
                    </div>
                    @*<div class="col-md-5">
                    <button type="button" class="btn btn-primary btn-style1-oval float-right" data-toggle="modal" data-target="#addFieldModal">+ Add Students</button>
                    </div>*@
                    <a href="AdminHome" type="submit" class="btn btn-primary btn-style1-oval float-right">+ Add Users</a>
                </div>
                <hr />
                <div id="formgrid" class="formgrid">
                    <table class="table table-bordered table-striped dtables" style="width: 100%" id="testtable">



                        <tr>
                            <th style="width: 20px; text-align: center">User ID</th>
                            <th>
                                <span style="font-size: 15px">FirstName</span>
                            </th>
                            <th>
                                <span style="font-size: 15px">LastName</span>
                            </th>

                            <th>
                                <span style="font-size: 15px">EmailID</span>
                            </th>
                            <th>
                                <span style="font-size: 15px">Password</span>
                            </th>
                            <th>
                                <span style="font-size: 15px">Gender</span>
                            </th>
                            <th>

                                <span style="font-size: 15px">DOB</span>
                            </th>
                            <th>
                                <span style="font-size: 15px">Role</span>
                            </th>
                            <th>
                                <span style="font-size: 15px">Status</span>
                            </th>
                            <th>
                                <span style="font-size: 15px">Action</span>
                            </th>
                        </tr>



                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.USERID</td>
                                <td>@item.FIRSTNAME</td>
                                <td>@item.LASTNAME</td>
                                <td>@item.EMAILID</td>
                                <td>@item.PASSWORD</td>
                                <td>@item.GENDER</td>
                                <td>@item.DOB</td>
                                <td>@item.ROLE</td>
                                <td>@item.STATUS</td>
                                <td>
                                    @Html.ActionLink("Update","Edit","Login", new {USERID = @item.USERID},null) |
                                    @Html.ActionLink("Delete","Delete","Login", new {USERID = @item.USERID},new { onclick = "return confirm('Are u sure wants to delete?');"})
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <br />
            </div>
        </div>
    </section>
</body>
</html>

